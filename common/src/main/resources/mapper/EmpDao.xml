<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mashibing.dao.EmpDao">
  <select id="findEmpByEmpno" resultType="com.mashibing.bean.Emp" useCache="false">
        select * from emp
      <trim prefix="where" prefixOverrides="AND | OR">
        <if test="empno != null">
            and empno = #{empno}
        </if>
          <if test="empno == null">
              or empno = #{empno}
          </if>
      </trim>
<!--       <where>-->
<!--         <if test="empno != null">-->
<!--           empno = #{empno}-->
<!--         </if>-->
<!--       </where>-->
  </select>
  <select id="findEmpByEmpnoAndEname" resultType="com.mashibing.bean.Emp">
        select * from emp where empno = #{empno} and ename = #{ename}
  </select>
  <select id="selectAll" resultType="com.mashibing.bean.Emp">
        select * from emp
  </select>
  <insert id="insert">
      <selectKey keyProperty="empno" resultType="int" order="BEFORE">
          <if test="empno != null">
              select CAST(RANDOM()*1000000 as INTEGER) a from SYSIBM.SYSDUMMY1
          </if>
      </selectKey>
        insert into emp(empno,ename) values(#{empno},#{ename})
  </insert>
  <update id="update">
        update emp set ename=#{ename} where empno = #{empno}
    </update>
  <delete id="delete">
        delete from emp where empno = #{empno}
    </delete>
</mapper>
